{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["html"],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single", { "avoidEscape": true }],
        "semi": ["error", "never"],
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "no-constant-condition": ["warn", { "checkLoops": false }],
        "no-console": "off"
    },
    "globals": {
        "invoke": "readonly",
        "open": "readonly",
        "save": "readonly",
        "getCurrentWindow": "readonly",
        "listen": "readonly"
    }
}
