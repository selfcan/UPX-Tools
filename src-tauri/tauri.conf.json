{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UPX GUI",
  "version": "1.0.0",
  "identifier": "top.aslant.upxgui",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "UPX GUI",
        "width": 1000,
        "height": 800,
        "minWidth": 900,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": false,
        "visible": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:window:default",
            "core:window:allow-close",
            "core:window:allow-minimize",
            "core:window:allow-maximize",
            "core:window:allow-toggle-maximize",
            "core:window:allow-start-dragging",
            "core:window:allow-show",
            "dialog:allow-open",
            "dialog:allow-save",
            "shell:allow-execute"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "../icons/32x32.png",
      "../icons/128x128.png",
      "../icons/128x128@2x.png",
      "../icons/icon.ico"
    ],
    "resources": [
      "../upx/upx.exe"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["zh-CN"],
        "template": null
      },
      "nsis": {
        "installMode": "currentUser",
        "languages": ["SimpChinese"],
        "displayLanguageSelector": true,
        "compression": "lzma",
        "installerIcon": "../icons/icon.ico",
        "headerImage": null
      }
    },
    "shortDescription": "UPX 可视化工具",
    "longDescription": "一个基于 Tauri 的 UPX 可视化加壳脱壳工具，支持文件压缩和解压",
    "copyright": "Copyright © 2025",
    "license": "MIT",
    "category": "Utility"
  }
}
